{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "resolveJsonModule": true,
    },
    "include": [
        "./src/**/*",
        "**/*.spec.ts",
        "tests/test.ts",
        "test"
    ],
    "exclude": [
        "node_modules",
        "src/custom.d.ts",
        "./jest-setup.ts"
    ]
}