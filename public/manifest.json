{
  "name": "T-Zone",
  "description": "Fait avec amour",
  "permissions": ["activeTab", "declarativeContent", "storage", "clipboardWrite", "tabCapture", "accessibilityFeatures.read", "notifications"],
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "128": "logo.png"
  },
  "web_accessible_resources": ["tzone-loader.svg"],
  "browser_action": {
    "default_icon": {
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
		"take-screenshot": {
		  "suggested_key": {
			"default": "Alt + S",
			"mac": "Alt + S"
		  },
		  "description": "Prendre une capture"
		},
		"take-screenshot-with-options": {
			"suggested_key": {
			  "default": "Ctrl + Shift + S",
			  "mac": "Command + Shift + S"
			},
			"description": "Prendre une capture avec options"
		  }
	}
}